@model Lab_1.Models.Visitor

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Visitor</h4>
<hr />
<div>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="GroupID"></label>
                <select asp-for="GroupID" asp-items="ViewBag.GroupID"></select>
            </div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Surname"></label>
                <input asp-for="Surname"/>
                <span asp-validation-for="Surname"></span>
            </div>
            <div>
                <label asp-for="Midname"></label>
                <input asp-for="Midname"/>
                <span asp-validation-for="Midname"></span>
            </div>
            <div>
                <label asp-for="Passport"></label>
                <input asp-for="Passport"/>
                <span asp-validation-for="Passport"></span>
            </div>
            <div>
                <input type="submit" value="Create"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
