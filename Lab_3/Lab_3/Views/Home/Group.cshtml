@model Lab_3.Models.Group

@{
    ViewData["Title"] = "Groups";
}

<h2>Groups</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Instructor.InstructorID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Count_of_visitor)
                </th>
               
            
            <th></th>
        </tr>
    </thead>
    <tbody>
                @foreach (var item in ViewBag.groups)
                {
                    <tr>
                        <td>@item.Instructor.InstructorID</td>
                        <td>@item.Name</td>
                        <td>@item.Count_of_visitor</td>
                        
                    </tr>
        }
    </tbody>
</table>
