@model Lab_3.Models.Visitor
@{
    ViewData["Title"] = "Visitors";
}
<h2>Index Visitors</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Midname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group.GroupID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
                @foreach (var item in ViewBag.visitors)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Midname</td>
                        <td>@item.Passport</td>
                        <td>@item.Group.GroupID</td>
                    </tr>
        }
    </tbody>
</table>
@{
    Lab_3.Models.Visitor visitorsCoockies = (Lab_3.Models.Visitor)ViewBag.visitorsCoockies;
}
@using (Html.BeginForm("AddVisitors", "Home", FormMethod.Post))
{
    <p class="add"> Добавить </p>
    <p>
        <label>Имя</label>
        @{
            if (visitorsCoockies != null)
            {
                @Html.TextBox("Name", visitorsCoockies.Name);

            }
            else
            {
                @Html.TextBox("Name");

            }
        }
    </p>
    <p>
        <label>Фамилия</label>
        @{
            if (visitorsCoockies != null)
            {
                @Html.TextBox("Surname", visitorsCoockies.Surname);
            }
            else
            {
                @Html.TextBox("Surname");
            }
        }
    </p>
    <p>
        <label>Отчество</label>
        @{
            if (visitorsCoockies != null)
            {
                @Html.TextBox("Midname", visitorsCoockies.Midname);
            }
            else
            {
                @Html.TextBox("Midname");
            }
        }
    </p>
    <p>
        <label>Паспорт</label>
        @{
            if (visitorsCoockies != null)
            {
                @Html.TextBox("Passport", visitorsCoockies.Passport);
            }
            else
            {
                @Html.TextBox("Passport");
            }
        }
    </p>
    <p>
        <label>Id группы</label>
        @{
            if (visitorsCoockies != null)
            {
                @Html.TextBox("GroupID", visitorsCoockies.GroupID);
            }
            else
            {
                @Html.TextBox("GroupID");
            }
        }
    </p>
    <p>
        <input type="submit" value="Send">
    </p>
            }
@{
    if (ViewBag.visitorsFromMemory != null)
    {
        Lab_3.Models.Visitor visitorsFromMemoryCashe = (Lab_3.Models.Visitor)ViewBag.visitorsFromMemory;
        <div class="infoMemory">
            <p>MemoryCache</p>
            @Html.DisplayNameFor(x => x.Name):&nbsp @visitorsFromMemoryCashe.Name.ToString();<br />
            @Html.DisplayNameFor(x => x.Surname):&nbsp @visitorsFromMemoryCashe.Surname.ToString();<br />
            @Html.DisplayNameFor(x => x.Midname):&nbsp @visitorsFromMemoryCashe.Midname.ToString();<br />
            @Html.DisplayNameFor(x => x.Passport):&nbsp @visitorsFromMemoryCashe.Passport.ToString();<br />
            @Html.DisplayNameFor(x => x.GroupID):&nbsp @visitorsFromMemoryCashe.GroupID.ToString();<br />

        </div>
    }
}
