@model IEnumerable<Lab_1.Models.Instructor>

@{
    ViewData["Title"] = "Index";
}

<h2>Instructors</h2>


<form>
    <p>Введите имя для поиска</p>
    <input name="Name" />
    <p>Введите ID для поиска</p>
    <select name="InstructorID">

        @foreach (var item in ViewBag.InstructorID)
            {
            <option value="@item.InstructorID">
                @item.InstructorID
            </option>
        }

    </select>
    <input type="submit" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InstructorID)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Midname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Experience)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aducation)
                </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstructorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Midname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aducation)
            </td>
          
        </tr>
}
    </tbody>
</table>
